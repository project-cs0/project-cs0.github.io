{% extends './templates/base.njk' %}

{% block pageTitle %}
Table of contents
{% endblock %}

{% block pageBody %}
<h1>Table of contents</h1>
<ol>
{% for chapter in metadata.chapters %}
    <li>
        <a href="{{ rootPath + '/' + chapter.outFile }}">{{ chapter.title }}</a>
    </li>
{% endfor %}
</ol>
{% endblock %}
